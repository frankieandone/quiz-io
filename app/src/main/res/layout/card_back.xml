<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >
    <androidx.cardview.widget.CardView
            android:id="@+id/cv_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardCornerRadius="@dimen/radius_card"
            android:layout_margin="@dimen/margin_normal"
            android:padding="@dimen/padding_normal"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:padding="@dimen/padding_normal"
                android:text="@string/type_answer"
                style="@style/TypeOverlay"
                />
        <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/AnswerText"
                android:padding="@dimen/padding_normal"
                android:text="The Application class in Android is the base class within an Android app that contains all other components such as activities and services. The Application class, or any subclass of the Application class, is instantiated before any other class when the process for your application/package is created."
                />
    </androidx.cardview.widget.CardView>
</FrameLayout>